<article id="shop-item-<%= shop.id %>" class="portfolio-item col-12 col-sm-6 col-md-3 <%= shop.categoryId %>">
    <div class="grid-inner">
        <div class="portfolio-image br-5">
            
                <img src="/images/shops/<%= shop.avatar ? shop.avatar : "default-shop.jpg" %>" alt="<%= shop.name %>">
            
            <!-- Overlay: Start -->
            
            <!-- Overlay: End -->
        </div>
        <div class="portfolio-desc">
            <h3 class="text-center text-uppercase"><a href="/shops/shop-details/<%= shop.id %>" class="white-color"><%= shop.name %></a></h3>
            <div class="line line-sm my-3"></div>					
            <a class="button btn-block text-center button-rounded mt-0" href="/shops/shop-details/<%= shop.id %>">Visitar Tienda</a>
            <h4 class="text-center color mb-0"><%= shop.products.length %> Productos Publicados</h4>
            <span class="text-center small">
             <% for(let i=0; i <= shop.ranking; i++){ %>
                <i class="color icon-star"></i>
             <% } %>
             </span>     
            
            <div class="line line-sm my-3"></div>	
            
            <div class="d-flex justify-content-center">
                <% if(shop.phone != ''){ %>
                <a href="tel:<%= shop.phone %>" target="blank" class="social-icon si-small nobottommargin si-facebook">
                    <i class="icon-phone"></i>
                    <i class="icon-phone"></i>
                </a>
                <% } %> 
                <% if(shop.email != ''){ %>
                <a href="mailto:<%= shop.email %>" target="blank" class="social-icon si-small nobottommargin si-email3">
                    <i class="icon-email"></i>
                    <i class="icon-email"></i>
                </a>
                <% } %> 
                <% if(shop.facebook != "https://www.facebook.com/" && shop.facebook != ''){ %>
                <a href="<%= shop.facebook %>" target="blank" class="social-icon si-small nobottommargin si-facebook">
                    <i class="icon-facebook"></i>
                    <i class="icon-facebook"></i>
                </a>
                <% } %> 
                <% if(shop.twitter != "https://www.twitter.com/" && shop.twitter != ''){ %>
                <a href="<%= shop.twitter %>" target="blank" class="social-icon si-small nobottommargin si-twitter">
                    <i class="icon-twitter"></i>
                    <i class="icon-twitter"></i>
                </a>
                <% } %> 
                <% if(shop.instagram != "https://www.instagram.com/" && shop.instagram != ''){ %>
                <a href="<%= shop.instagram %>" target="blank" class="social-icon si-small nobottommargin si-instagram">
                    <i class="icon-instagram"></i>
                    <i class="icon-instagram"></i>
                </a>
                <% } %> 
            </div>
            
        </div>
    </div>
</article>

