
    <h3 id="comments-title"><span><%= comments.length%></span> Comentarios</h3>
    <!-- Comments List -->
    <ol class="commentlist clearfix">
        <% comments.forEach( (comment) => { %>
            <li class="comment even thread-even depth-1" id="li-comment-<%= comment.id%>">
                <div id="comment-<%= comment.id%>" class="comment-wrap clearfix">
                    <div class="comment-meta">
                        <div class="comment-author vcard">
                            <span class="comment-avatar clearfix">
                                <img alt='Image' src='/images/users/<%= comment.users.avatar%>'
                                    class='avatar avatar-60 photo avatar-default' height='60' width='60' /></span>
                        </div>
                    </div>
                    <div class="comment-content clearfix">
                        <div class="comment-author"><%= comment.users.name%><span><a href="javascript:void(0)" title="Permalink to this comment"><%= comment.date%></a></span></div>
                        <p><%= comment.comment%></p>
                        <!-- <a class='comment-reply-link' href='#'><i class="icon-reply"></i></a> -->
                    </div>
                    <div class="clear"></div>
                </div>
            </li>
        <% }) %> 
        
        <%- include('./productSubcomments') %> 

    </ol><!-- .commentlist end -->

    <div class="clear"></div>
