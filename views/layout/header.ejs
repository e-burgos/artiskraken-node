
<!-- Top Header -->
<%- include('./topHeader') %>

<div id="header-wrap">
    <div class="container">
        <div class="header-row">

            <!-- Logo -->
            <div id="logo">
                <a href="/" class="standard-logo" data-dark-logo="/images/logo/logo-dark.png"
                    data-sticky-logo="/images/logo/logo-sticky.png"><img src="/images/logo/logo-dark.png"
                        alt="Kraken Logo"></a>
                <a href="/" class="retina-logo" data-dark-logo="/images/logo/logo-dark.png"
                    data-sticky-logo="/images/logo/logo-sticky-2x.png"><img src="/images/logo/logo-sticky-2x.png"
                        alt="Karken Logo"></a>
            </div><!-- #logo end -->

                <!-- #cart panel -->
                <div class="header-misc">
                    <div class="menu-item">
                        <a class="menu-link menu-link-space side-panel-trigger">
                            <i class="icon-line-shopping-cart" style="font-size: 20px;"></i>
                        </a>
                    </div>
                    <!-- #cart panel -->
                    <% if (!currentUser) { %>
                        <div class="menu-item">
                            <a class="menu-link menu-link-space" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="icon-line-log-in dropdown-login" style="font-size: 20px;"></i>
                             </a>
                            <div class="dropdown-menu dropdown-menu-right" style="width: 200px;">
                
                                <a href="/users/login" id="login-button" class="button button-small button-reveal d-inline-flex tright">
                                    <i class="fas fa-id-badge"></i><span>Ingresa</span></a>
                
                                <a href="/users/register" id="login-button"
                                    class="button button-small button-reveal d-inline-flex tright">
                                    <i class="fas fa-address-card"></i><span>Registrate</span></a>
                            </div>
                        </div>
                    <% } %>
                    <% if (currentUser){ %>
                        <div class="">
                            <i data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class=" d-inline-flex dropdown-login">
                                <img src="/images/users/<%= currentUser.avatar%>" class="alignleft img-circle img-thumbnail my-0" alt="Avatar"
                                    style="max-width: 45px;">
                            </i>
                            <div class="dropdown-menu dropdown-menu-right" style="width: 200px;">
                            
                                <a href="/users/<%= currentUser.id %>/profile" id="login-button" class="button button-small button-reveal d-inline-flex tright">
                                    <i class="fas fa-user-circle"></i><span>Mi Perfil</a>
                            
                                <% if (currentUser.role == "seller" && currentUser.shopId != null) { %>
                                    <a href="/shops/<%= currentUser.shopId %>/profile" id="login-button" class="button button-small button-reveal d-inline-flex tright">
                                        <i class="icon-home"></i><span>Mi Comercio</a>
                                <% } %>
                            
                                <% if (currentUser.admin == true) { %>
                                    <a href="/admin" id="login-button" class="button button-small button-reveal d-inline-flex tright">
                                        <i class="icon-cog"></i><span>Administrador</a>
                                <% } %>

                                <a href="/store/productCart" id="login-button" class="button button-small button-reveal d-inline-flex tright bg-cart">
                                    <i class="icon-line-shopping-cart"></i><span>Carrito</a>

                                <form class="m-0" action="/users/destroy-session?_method=DELETE" method="POST">
                                    <button type="submit" id="login-button" class="button button-small button-reveal d-inline-flex tright bg-logout">
                                    <i class="icon-line-arrow-right"></i><span>Cerrar Sesi√≥n</span></button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </div>

            <div id="primary-menu-trigger">
                <svg class="svg-trigger" viewBox="0 0 100 100">
                    <path
                        d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20">
                    </path>
                    <path d="m 30,50 h 40"></path>
                    <path
                        d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20">
                    </path>
                </svg>
            </div>

            <!-- Primary Navigation
                    ============================================= -->
            <%- include('./navigation.ejs') %>

        </div>
    </div>
</div>
<div class="header-wrap-clone"></div>
